<div id="product-page">
    <a title="Voltar" href="/products"><span class="material-symbols-outlined">undo</span></a>
    <div class="container">
        <h1>{{product.name}}</h1>
        <p>Descrição: {{product.description}}</p>
        <p>Valor: {{formatPrice product.price}}</p>
        <p>Peso: {{product.weight}} </p>
        <p>Tipo: {{product.type}}</p>
        
        <div class="actions">
            <a href="/productedit/{{product.id}}">Editar</a>
            <form action="/products/remove/{{product.id}}" method="POST">
            <input type="submit" value="Remover">
            </form>
        </div>
    </div>
</div>