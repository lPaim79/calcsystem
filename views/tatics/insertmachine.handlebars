<h1>Inserir máquina ao processo {{tatic.name}}</h1>
<a href="/tatics">Voltar</a>
<form action="/insertmachine" method="POST" class="form">
<input type="hidden" name="id" value="{{tatic.id}}">
<div class="form-control">
    <label for="machine_id">Máquina:</label>
    <select name="machine_id">
        <option value=''>Sem máquina</option>
        {{#each machines}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>
<input type="submit" value="Editar">    
</form>