<h1>Fornecedores</h1>
<div class="container">
    <div class="actions">
        <i><a title="Página Inicial" href="/"><span class="material-symbols-outlined">home</span></a></i>
        <i><a title="Voltar" href="/registrations"><span class="material-symbols-outlined">arrow_back</span></a></i>
        <i><a title="Novo Fornecedor" href="/createprovider"><span class="material-symbols-outlined">add_circle</span></a></i>
    </div> 
    {{#if providers}}
    <table class="table">
    <tr>
        <th class="midle-coloun">Nome</th>
        <th>Fone</th>
        <th>Whatsapp</th>
        <th class="midle-coloun">Endereço</th>
        <th class="midle-coloun">Ações</th>
    </tr>

    {{#each providers}}
    <tr>
        <td><span class="bold"><a href="/provider/{{this.id}}">{{this.name}}</a></span></td>
        <td>{{formatPhone this.phone}}</td>
        <td>{{formatPhone this.whatsapp}}</td>
        <td>{{this.addresses.street}}, {{this.addresses.number}} 
            {{#if this.addresses.complement}}
            - {{this.addresses.complement}}
            {{/if}}
            - {{this.addresses.city}}</td>
        <td>
            <div class="actions">
                <a title="Visualizar" href="/provider/{{this.id}}"><i><span class="material-symbols-outlined">file_open</span></i></a>
                <a title="Editar" href="/provideredit/{{this.id}}"><i><span class="material-symbols-outlined">edit</span></i></a>
                <a title="Excluir" href="/providers/remove/{{this.id}}"><i><span class="material-symbols-outlined">delete</span></i></a>
            </div>
        </td>
    </tr>        
    {{/each}}
    </table>
    {{else}}
    <h3>Não há fornecedores cadastrados!</h3>
    {{/if}}
</div>