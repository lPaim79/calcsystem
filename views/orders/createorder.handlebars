<H1>Cadastro de Pedidos</H1>
<a href="/orders">Voltar</a>
<form action="/insertorder" method="POST" class="form">
    <div class="form-control">
        <label for="date">Data:</label>
        <input type="date" name="date">
    </div>
    <div class="form-control">
        <label for="client_id">Cliente</label>
        <select name="client_id">
            <option value="">Selecione o Cliente</option>
            {{#each clients}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-control">
        <label for="product_id">Produto</label>
        <select name="product_id">
            <option value="">Escolha o Produto</option>
            {{#each products}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-control">
        <label for="description">Descriçao:</label>
        <input type="text" name="description" placeholder="Digite a Descrição">
    </div>
    <div class="form-control">
        <label for="price">Valor:</label>
        <input type="float" name="price" placeholder="Digite o valor">
    </div>
    <div class="form-control">
        <label for="payment">Pagamento:</label>
        <input type="text" name="payment" placeholder="Pagamento ">
    </div>
    <div class="form-control">
        <label for="stage_id">Fase:</label>
        <select name="stage_id">
            <option value="">Selecione o Estágio</option>
            {{#each stages}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    
    <div class="form-control">
        <label for="prevision">Previsão de Entrega:</label>
        <input type="date" name="prevision">
    </div>    
    <input type="submit" value="Cadastrar">
</form>
